---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Familien-Garten - Urlaub im Gr√ºnen" } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | Voigt-Garten</title>
  </head>
  <body class="min-h-screen bg-garden-50 font-sans text-gray-800">
    <nav class="bg-white shadow-sm border-b border-garden-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center gap-2">
              <span class="text-3xl">üå≥</span>
              <span class="font-display text-xl font-semibold text-garden-800">Voigt-Garten</span>
            </a>
          </div>
          <div class="hidden sm:flex sm:items-center sm:gap-6">
            <a href="/" class="text-gray-600 hover:text-garden-700 transition">Start</a>
            <a href="/ueber-den-garten" class="text-gray-600 hover:text-garden-700 transition">Der Garten</a>
            <a href="/galerie" class="text-gray-600 hover:text-garden-700 transition">Galerie</a>
            <a href="/buchen" class="text-gray-600 hover:text-garden-700 transition">Buchen</a>
            <a href="/wartung" class="text-gray-600 hover:text-garden-700 transition">Wartung</a>
            <a href="/umgebung" class="text-gray-600 hover:text-garden-700 transition">Umgebung</a>
          </div>
          <!-- Mobile menu button -->
          <div class="sm:hidden flex items-center">
            <button id="mobile-menu-btn" class="text-gray-600 hover:text-garden-700">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden sm:hidden bg-white border-t border-garden-100">
        <div class="px-4 py-3 space-y-2">
          <a href="/" class="block py-2 text-gray-600 hover:text-garden-700">Start</a>
          <a href="/ueber-den-garten" class="block py-2 text-gray-600 hover:text-garden-700">Der Garten</a>
          <a href="/galerie" class="block py-2 text-gray-600 hover:text-garden-700">Galerie</a>
          <a href="/buchen" class="block py-2 text-gray-600 hover:text-garden-700">Buchen</a>
          <a href="/wartung" class="block py-2 text-gray-600 hover:text-garden-700">Wartung</a>
          <a href="/umgebung" class="block py-2 text-gray-600 hover:text-garden-700">Umgebung</a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="bg-garden-900 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-display text-lg font-semibold mb-4">Voigt-Garten</h3>
            <p class="text-garden-200 text-sm">
              Ein St√ºck Natur f√ºr die Familie.<br />
              Erholung, Gemeinschaft, Tradition.
            </p>
          </div>
          <div>
            <h3 class="font-display text-lg font-semibold mb-4">Kontakt</h3>
            <p class="text-garden-200 text-sm">
              Familie Voigt<br />
              <!-- PLACEHOLDER: Adresse einf√ºgen -->
              <a href="mailto:garten@voigt-familie.de" class="hover:text-white transition">
                garten@voigt-familie.de
              </a>
            </p>
          </div>
          <div>
            <h3 class="font-display text-lg font-semibold mb-4">Familien-Rabatt</h3>
            <p class="text-garden-200 text-sm">
              Code: <span class="font-mono bg-garden-800 px-2 py-1 rounded">VOIGT-GARTEN</span><br />
              50% Rabatt f√ºr Familienmitglieder
            </p>
          </div>
        </div>
        <div class="border-t border-garden-800 mt-8 pt-8 text-center text-garden-300 text-sm">
          &copy; {new Date().getFullYear()} Familie Voigt. Mit Liebe gepflegt.
          <span class="mx-2">|</span>
          <a href="/admin" class="hover:text-white transition">Admin</a>
        </div>
      </div>
    </footer>

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
